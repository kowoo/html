<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>BBBoard</display-name>
  	<welcome-file-list>
    	<welcome-file>JSP/index.jsp</welcome-file>
  	</welcome-file-list>
	<filter>
		<filter-name>loginCheckFilter</filter-name>
		<filter-class>filter.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginCheckFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>BoardServlet</servlet-name>
		<servlet-class>controller.BoardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MemberServlet</servlet-name>
		<servlet-class>controller.MemberServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-class>controller.CommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BoardServlet</servlet-name>
		<url-pattern>/board</url-pattern>
		<url-pattern>/board.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MemberServlet</servlet-name>
		<url-pattern>/member</url-pattern>
		<url-pattern>/member.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentServlet</servlet-name>
		<url-pattern>/comment</url-pattern>
		<url-pattern>/comment.do</url-pattern>
	</servlet-mapping>
</web-app>