<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Day0602_Z_Filter</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MemberServlet</servlet-name>
    <servlet-class>servlet.MemberServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MessageServlet</servlet-name>
    <servlet-class>servlet.MessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MessageServlet</servlet-name>
    <url-pattern>/messageList</url-pattern>
    <url-pattern>/write</url-pattern>
    <url-pattern>/confirmDeletion</url-pattern>
    <url-pattern>/pwCheck</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginCheckFilter</filter-name>
    <filter-class>filter.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginCheckFilter</filter-name>
    <url-pattern>/main</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/memberList</url-pattern>
    <url-pattern>/modifyForm</url-pattern>
    <url-pattern>/modify</url-pattern>
  </filter-mapping>
</web-app>